{
  "expo": {
    "name": "Status Expedição",
    "slug": "status-expedicao",
    "version": "1.0.0",
    "orientation": "portrait",

    // Ícone do app
    "icon": "./assets/icon.png",
    "scheme": "statusexpedicao",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "package": "com.feijaoozin.statusexpedicao",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      // Adaptive Icon
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },

    "web": {
      "output": "static",
      "favicon": "./assets/icon.png"
    },

    // Plugins (Splash configurado corretamente)
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "3df8e41d-e8fb-4da7-88e8-1272becd88a9"
      }
    }
  }
}
